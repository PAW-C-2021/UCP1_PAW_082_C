@model IEnumerable<UTS_DataHadir.Models.Gajian>

@{
    ViewData["Title"] = "Gaji";
}

<h1>Gaji</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nominal Gaji")
            </th>
            <th>
                @Html.DisplayName("Nama")
            </th>
            <th>
                @Html.DisplayName("Id Kehadiran")
            </th>
            <th>
                @Html.DisplayName("Keterangan")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NominalGaji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpNavigation.Nama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdKehadiranNavigation.IdKehadiran)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdKetBayarNavigation.KetBayar)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdGaji"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdGaji"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdGaji"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
