@model IEnumerable<UTS_DataHadir.Models.Statushadir>

@{
    ViewData["Title"] = "Status Hadir";
}

<h1>Status Kehadiran</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Keterangan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Keterangan)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdStatus"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdStatus"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdStatus"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
