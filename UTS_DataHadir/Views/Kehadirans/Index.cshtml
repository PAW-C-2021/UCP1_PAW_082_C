@model IEnumerable<UTS_DataHadir.Models.Kehadiran>

@{
    ViewData["Title"] = "Kehadiran";
}

<h1>Kehadiran</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Id Kehadiran")
            </th>
            <th>
                @Html.DisplayName("Tanggal Hadir")
            </th>
            <th>
                @Html.DisplayName("Nama")
            </th>
            <th>
                @Html.DisplayName("Status Kehadiran")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdKehadiran)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TanggalHadir)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpNavigation.Nama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdStatusNavigation.Keterangan)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdKehadiran"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdKehadiran"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdKehadiran"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
